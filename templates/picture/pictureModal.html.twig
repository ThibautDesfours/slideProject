<div class="modal-header">
	<h5 class="modal-title text-center" id="exampleModalLabel">Ajout d'une image</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="container">
	{{ form_start(form, {'action': path('newPicture') }) }}


	{{ form_errors(form) }}
	<div class="container" style="margin-top: 10px">
		{{ form_errors(form.name_picture) }}
		{{ form_widget(form.name_picture, {'attr': {'placeholder': 'Nom'} }) }}
	</div>
	<div class="container" style="margin-top: 10px; margin-bottom: 10px">
		{{ form_errors(form.path_picture) }}
		{{ form_widget(form.path_picture, {'attr': {'placeholder': 'Choisir une image' } }) }}
	</div>
	{{ form_rest(form) }}

	<div class="modal-footer">
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
		<button type="submit" class="btn btn-primary">Enregistrer</button>
	</div>

	{{ form_end(form) }}
</div>
